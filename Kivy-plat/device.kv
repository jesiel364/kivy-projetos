<Item>
    size_hint_x: .2
    adaptive_size: True
    text: root.right_text
    # font_style: "Caption"
    IconLeftWidget:
        icon: root.left_icon

<InfoScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        id: container
        canvas.before:
            # Color:
            #     rgba: hex('#EEEEEE')
            Rectangle:
                size: self.size
                pos: self.pos

        MDToolbar:
            # id: toolbar
            # background_color: hex('#3D5AFE')
            size_hint_y: .1
            title: "Seu Dispositivo"
            right_action_items:  [["chevron-left", lambda x: app.voltar()]]
        
        MDFloatLayout:
            id: tela2
            # orientation: 'vertical'
            
            MDBoxLayout:
                MDLabel:
                    id: texto
                    text: 'Lorem ipsum laboris sunt dolore eiusmod velit eu exercitation mollit ut id ut aliqua.'
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    font_style: 'Subtitle1'
                    halign: 'center'


        


